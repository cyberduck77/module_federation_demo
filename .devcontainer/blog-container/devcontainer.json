{
  "name": "PHP Development Container",
  "dockerComposeFile": [
    "../../docker-compose.dev.yml"
  ],
  "service": "blog", // The service to connect VS Code to
  "workspaceFolder": "/app", // The workspace inside the container
  "extensions": [
    "EditorConfig.EditorConfig",
    "MS-CEINTL.vscode-language-pack-ja",
    "xdebug.php-debug",
    "bmewburn.vscode-intelephense-client",
    "shardulm94.trailing-spaces",
    "Vue.volar",
    "mosapride.zenkaku",
    "PKief.material-icon-theme",
    "GitHub.github-vscode-theme"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/zsh", // Use Zsh as the default terminal
    "editor.tabSize": 2, // Configure tab size
    "php.validate.executablePath": "/usr/local/bin/php" // Path for PHP validation
  },
  "postCreateCommand": "composer install --no-interaction --dev && pnpm install", // Install dependencies after container is created
  "forwardPorts": [
    3000, // Forward Node.js port
    8000 // Forward PHP-FPM/Laravel app port
  ],
  // "shutdownAction": "stopCompose", // Cleanly stop Docker Compose services on shutdown
  "remoteUser": "devuser" // Use the 'devuser' created in Dockerfile
}